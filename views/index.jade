extends layout

block content

    form(name="smartbond" method='POST')
        div.form-group
            label(for='type') Type:
            select(name='types', id='')
                option FixedRB
                option FRN
        div.form-group
            label(for='description') Description:
            input#description.form-control(type='text', name='description')
        div.form-group
            label(for='issuerSpread') Issuer Spread:
            input#issuerSpread.form-control(type='text', name='issuerSpread')
        div.form-group
            label(for='valuationDate') Valuation Date:
            input#valuationDate.form-control(type='date' name='valuationDate')
        div.form-group
            label(for='marketSpread') Market Spread:
            input#marketSpread.form-control(type='text' name='marketSpread')
        div.form-group
            label(for='frequency') Frequency:
            select(name='frequencies', id='')
                option 30
                option 60
                option 90
                option 120
                option 150
                option 180
                option 360
        div.form-group
            label(for='notional') Notional:
            input#notional.form-control(type='text' name='notional')
        div.form-group
            label(for='indexation') Indexation:
            input#indexation.form-control(type='text' name='indexation')
        div.form-group
            label(for='coupon') Coupon:
            input#coupon.form-control(type='text' name='coupon')
        div.form-group
            label(for='convention') Convention:
            select(name='conventions', id='')
                option(value="0,00278") ACT/360
                option(value="0,00275") ACT/364
                option(value="0,00274") ACT/365
                option(value="0,00273") ACT/366
        div.form-group
            label(for='maturity') Maturity:
            input#maturity.form-control(type='date' name='maturity')
            
        button#deploy Deploy Smart Bond
