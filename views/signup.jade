extends layout

block extraHead
    script(src='/javascripts/signup.js')

block content

    form(method='post')
        div
            label(class="radio-inline")
                input.form-control#type(type="radio" name="optradio" checked) Option 1
        div(class='form-group row')
            label(for='username' class='col-sm-1 col-form-label') Username
            div
                input.form-control#username(type='text' name='username' required)
        div(class='form-group row')
            label(for='password' class='col-sm-1 col-form-label') Password
            div
                input.form-control#password(type='password'  name='password' required)
        
        button(id="cancel" class="btn btn-primary mb-2") Cancel
        
        button(id="signup" class="btn btn-primary mb-2") Sign up
