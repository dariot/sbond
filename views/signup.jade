extends layout

block extraHead
    script(src='/javascripts/signup.js')

block content

    form(method='post')
        div(class='form-group row')
            label(for='username' class='col-sm-1 col-form-label') Username
            div
                input.form-control#username(type='text' name='username')
        div(class='form-group row')
            label(for='password' class='col-sm-1 col-form-label') Password
            div
                input.form-control#password(type='password'  name='password')
        div(class='form-group row')
            label(for='repeat-password' class='col-sm-1 col-form-label') Repeat password
            div
                input.form-control#password(type='password'  name='repeat-password')
        button(id="signup" class="btn btn-primary mb-2") Sign up
